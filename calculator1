number1=float(input("一つ目の数字を入力:"))
op=input("演算子を入力:")
num2=float(input("2つ目の数字を入力"))

if op=="+":
  result=number1+num2
elif op=="-":
  result=number1+num2
elif op=="*":
  result=number1+num2
elif op=="/":
  if num2!=0:
  result=number1/num2
  else:
    result="エラー（０で割れません）"
else:
  result="不正な演算子です"

print("結果：", result)
